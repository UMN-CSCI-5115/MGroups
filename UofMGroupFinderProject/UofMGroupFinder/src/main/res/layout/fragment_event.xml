<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".EventActivity$PlaceholderFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Find Events"
        android:id="@+id/eventSearchText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp" />

    <Spinner
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:id="@+id/eventSpinner"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="75dp"
        android:layout_marginLeft="42dp"
        android:entries="@array/group_arrays"
        android:prompt="@string/group_prompt"
        style="@style/spinner"/>

    <SearchView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eventSearchView"
        android:background="@color/lightGray"
        android:clickable="true"
        android:focusable="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="150dp"
        android:layout_alignParentRight="true"
        android:iconifiedByDefault="false"
        android:queryHint="@string/searchPrompt"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:text="Search"
        android:textSize="25dp"
        android:gravity="left|center_vertical"
        android:drawablePadding="20dp"
        android:background="@color/darkgold"
        android:layout_marginTop="340dp"
        android:layout_marginLeft="80dp"
        android:layout_marginBottom="1dp"
        android:paddingLeft="10dp"
        android:drawableLeft="@drawable/srchevents"
        android:id="@+id/eventOKButton" />

</RelativeLayout>
