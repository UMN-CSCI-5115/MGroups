<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment"
    android:focusable="false">

    <TextView
        android:id="@+id/menuText"
        android:text="@string/mainMenuText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/groupSearchButton"
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:text="@string/groupSearchButtonText"
        android:layout_below="@+id/menuText"
        android:layout_alignParentLeft="true"
        android:background="@color/lightGray"
        android:clickable="true"
        android:shadowColor="@color/grayShadow"
        android:drawableEnd="@color/grayShadow"
        android:enabled="true" />

    <Button
        android:id="@+id/eventSearchButton"
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:layout_below="@id/groupSearchButton"
        android:layout_alignParentLeft="true"
        android:text="@string/eventSearchButtonText"
        android:background="@color/lightGray" />

    <Button
        android:id="@+id/FavoritesButton"
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:layout_below="@id/eventSearchButton"
        android:layout_alignParentLeft="true"
        android:text="@string/favoritesButtonText"
        android:background="@color/lightGray" />

    <Button
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:layout_below="@id/FavoritesButton"
        android:layout_alignParentLeft="true"
        android:text="@string/settingsButtonText"
        android:background="@color/lightGray" />

</RelativeLayout>
