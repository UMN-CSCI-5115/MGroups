<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:background">@color/gold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:actionBarStyle">@style/mActionBar</item>
        <item name="android:actionBarTabTextStyle">@style/TabTextStyle</item>
        <item name="android:actionMenuTextColor">@color/gold</item>
    </style>

    <style name="mActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/maroon</item>
        <item name="android:icon">@drawable/mgoldy</item>
        <item name="android:titleTextStyle">@style/TitleTextStyle</item>
    </style>

    <!-- action bar title text -->
    <style name="TitleTextStyle">
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- action bar tab text -->
    <style name="TabTextStyle">
        <item name="android:textColor">@color/gold</item>
    </style>

</resources>

